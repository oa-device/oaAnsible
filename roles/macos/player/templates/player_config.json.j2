{
  "video_source_dir": "{{ player.video_source }}",
  "dual_screen": {{ player.dual_screen | default(true) | lower }},
  "window_width": {{ player.window_width | default(800) }},
  "window_height": {{ player.window_height | default(600) }},
  "fullscreen": {{ player.fullscreen | default(false) | lower }},
  "loop": {{ player.loop_mode | default(true) | lower }},
  "videos": [
    {% for video in player.videos %}
    {% if video.enabled | default(true) %}
    {
      "name": "{{ video.name }}",
      "display": {{ video.display | default(1) }},
      "enabled": {{ video.enabled | default(true) | lower }},
      "loop": {{ video.loop | default(true) | lower }},
      "volume": {{ video.volume | default(0.0) }}
    }{% if not loop.last %},{% endif %}
    {% endif %}
    {% endfor %}
  ]
}