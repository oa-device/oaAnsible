# OPI-Setup Configuration File
# Generated by Ansible - Do not edit manually

# API Configuration
api:
  host: {{ opi_setup_service.api.host }}
  port: {{ opi_setup_service.api.port }}
  workers: {{ opi_setup_service.api.workers }}
  log_level: {{ opi_setup_service.api.log_level }}
  api_key: {{ opi_setup_service.api.api_key }}

# Device Information
device:
  model: {{ orangepi_model | default('OrangePi 5B') }}
  board_id: {{ orangepi_board_id | default('orangepi-5b') }}
  hostname: {{ ansible_hostname }}
  architecture: {{ ansible_architecture }}
  os: {{ ansible_distribution }} {{ ansible_distribution_version }}

# Health Monitoring
health:
  enabled: {{ health_monitoring.enabled | lower }}
  check_interval: {{ health_monitoring.check_interval }}
  endpoints: {{ health_monitoring.endpoints | to_json }}

# Screenshot Configuration
screenshots:
  enabled: {{ screenshot_config.enabled | lower }}
  interval: {{ screenshot_config.interval }}
  quality: {{ screenshot_config.quality }}
  max_screenshots: {{ screenshot_config.max_screenshots }}
  storage_path: {{ screenshot_config.storage_path }}
  methods: {{ screenshot_config.methods | to_json }}

# Logging Configuration
logging:
  level: {{ logging_config.level }}
  format: "{{ logging_config.format }}"
  max_size: {{ logging_config.max_size }}
  backup_count: {{ logging_config.backup_count }}
  files:
    app: {{ logging_config.files.app }}
    access: {{ logging_config.files.access }}
    error: {{ logging_config.files.error }}

# Security Configuration
security:
  api_key_required: {{ security_config.api_key_required | lower }}
  cors_enabled: {{ security_config.cors_enabled | lower }}
  cors_origins: {{ security_config.cors_origins | to_json }}
  rate_limiting:
    enabled: {{ security_config.rate_limiting.enabled | lower }}
    requests_per_minute: {{ security_config.rate_limiting.requests_per_minute }}

# Performance Configuration
performance:
  memory_limit: {{ performance_config.memory_limit }}
  cpu_limit: {{ performance_config.cpu_limit }}
  worker_connections: {{ performance_config.worker_connections }}
  keepalive_timeout: {{ performance_config.keepalive_timeout }}

# Paths
paths:
  install_dir: {{ opi_setup_service.install_dir }}
  config_dir: {{ opi_setup_service.config_dir }}
  logs_dir: {{ opi_setup_service.logs_dir }}
  data_dir: {{ opi_setup_service.data_dir }}
  venv_path: {{ opi_setup_service.python.venv_path }}