# OrangeAd ALPR Configuration
# Environment variables for ALPR monitor service

# Detection Configuration
DETECTIONS_DIR={{ ansible_user_dir }}/orangead/alpr/detections
CAMERA_ID={{ alpr_camera_id | default(0) }}
MAX_IMAGES_PER_CAR={{ alpr_max_images_per_car | default(5) }}
FRAME_SKIP={{ alpr_frame_skip | default(5) }}
CONFIDENCE_THRESHOLD={{ alpr_confidence_threshold | default(0.5) }}

# PlateRecognizer API Configuration
ALPR_SERVICE_URL=http://localhost:{{ macos_alpr_host_port }}/v1/plate-reader/
ALPR_REGION={{ alpr_region | default('ca') }}
ALPR_COUNTRY={{ alpr_country | default('ca') }}

# Logging
LOG_LEVEL={{ alpr_log_level | default('INFO') }}