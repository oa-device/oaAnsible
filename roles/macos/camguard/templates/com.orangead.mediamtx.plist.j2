<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.orangead.mediamtx</string>

    <key>ProgramArguments</key>
    <array>
        <string>{{ ansible_user_dir }}/orangead/bin/mediamtx</string>
        <string>{{ ansible_user_dir }}/orangead/camguard/config/mediamtx.yml</string>
    </array>

    <key>WorkingDirectory</key>
    <string>{{ ansible_user_dir }}/orangead/camguard</string>

    <key>StandardOutPath</key>
    <string>{{ camguard.storage.logs_dir }}/mediamtx.stdout.log</string>

    <key>StandardErrorPath</key>
    <string>{{ camguard.storage.logs_dir }}/mediamtx.stderr.log</string>

    <key>KeepAlive</key>
    <true/>

    <key>RunAtLoad</key>
    <true/>

    <!-- Restart configuration -->
    <key>ThrottleInterval</key>
    <integer>30</integer>

    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin:{{ ansible_user_dir }}/orangead/bin</string>
        <key>HOME</key>
        <string>{{ ansible_user_dir }}</string>
    </dict>

    <!-- Process settings -->
    <key>ProcessType</key>
    <string>Interactive</string>

    <!-- User context -->
    <key>UserName</key>
    <string>{{ camguard.service.user }}</string>

    <!-- Logging -->
    <key>AbandonProcessGroup</key>
    <true/>
    
    <!-- Nice level (lower priority than recording) -->
    <key>Nice</key>
    <integer>5</integer>
</dict>
</plist>